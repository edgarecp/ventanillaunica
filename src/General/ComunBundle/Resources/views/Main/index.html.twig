{% extends "GeneralComunBundle::layout.html.twig" %} 

{% set modulo = app.session.get('modulo')|default('GeneralComunBundle') %}

{% block oJScYCss %}
<!--Wijmo Widgets Pager-->
<link href="{{ asset('bundles/wijmo/Wijmo/wijpager/jquery.wijmo.wijpager.css') }}" rel="stylesheet" type="text/css"></script>
<script src="{{ asset('bundles/wijmo/Wijmo/wijpager/jquery.wijmo.wijpager.min.js') }}"  type="text/javascript"></script>
<!--Wijmo Widgets Carousel-->
<link href="{{ asset('bundles/wijmo/Wijmo/wijcarousel/jquery.wijmo.wijcarousel.css') }}" rel="stylesheet" type="text/css"></script>
<script src="{{ asset('bundles/wijmo/Wijmo/wijcarousel/jquery.wijmo.wijcarousel.min.js') }}"  type="text/javascript"></script>
<!--Wijmo Widgets Accordion-->
<link href="{{ asset('bundles/wijmo/Wijmo/wijaccordion/jquery.wijmo.wijaccordion.css') }}" rel="stylesheet" type="text/css"></script>
<script src="{{ asset('bundles/wijmo/Wijmo/wijaccordion/jquery.wijmo.wijaccordion.min.js') }}"  type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#carousel").wijcarousel({
                display: 1,
                auto: true,
                interval: 3000,
                showTimer: false,
                showPager: true,
                loop: true,
                showControlsOnHover: false
        });
            
        $("#accordion").wijaccordion({
            header: "h2",
            event: "mouseover"
        });
    });
</script>
{% endblock %}

{% block cuerpo %}
<div class="grid_6">
    <br />
    <fieldset>
        <legend>Estado del Sistema</legend>
        <br />
        <center><h1>{{ estSisDes }}</h1></center>
        <br />
    </fieldset>
    <br /><br />
    <fieldset>
        <legend>Acceso Actual</legend>
        <table class="index">
            <tr><td width="30%">Usuario</td><td width="70%">{{ app.user }}</td></tr>
            {% if modulo == '' %}
            <tr><td>Perfil</td><td>{{ app.user.perfil }}</td></tr>
            {% endif %}
            <tr><td>Ingreso</td><td>{{ accAct.ingresoEl|date('d/m/Y h:i:s') }}</td></tr>
            <tr><td>Maquina</td><td>{{ accAct.maquina }}</td></tr>
        </table> 
        <br />        
    </fieldset>
    <br /><br />
    {% if accAnt == null %}    
    {% else %}
    <fieldset>
        <legend>Anterior Acceso</legend>
        <br />        
        <table class="index">
            <tr><td width="30%">Ingreso</td><td width="70%">{{ accAnt.ingresoEl|date('d/m/Y h:i:s') }}</td></tr>
            <tr><td>Salida</td><td>{% if accAnt.salidaEl %}{{ accAnt.salidaEl|date('d/m/Y h:i:s') }}{% endif %}</td></tr>
            <tr><td>Maquina</td><td>{{ accAnt.maquina }}</td></tr>
        </table>
        <br /><br />
    </fieldset>
    {% endif %}
</div>
<div class="grid_10">
{% include 'GeneralComunBundle:Main:_carousel.html.twig' %}
{% include 'GeneralComunBundle:Main:_noticias.html.twig' %}
</div><div class="clear"></div>
<br />
{% endblock %}
